
# INSTRUKSI:
# 1. Buat/Update file ".htaccess" di root folder /public_html/
# 2. Copy kode di bawah ini. Kode ini MENCEGAH React mengambil alih request ke API.

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Hilangkan trailing slash
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)/$ /$1 [L,R=301]

  # PENTING: Jangan rewrite folder API
  RewriteRule ^api/ - [L]

  # Routing React (SPA)
  # Jika bukan file atau folder nyata, arahkan ke index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

Options -Indexes